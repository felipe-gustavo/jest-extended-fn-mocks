{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": [
      "jest",
      "node"
    ],
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}